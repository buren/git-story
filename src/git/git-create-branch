#!/bin/bash
source $GS_INIT_PATH
__git-story-init

USAGE="<branch-name>

required:
  branch-name

Create a new branch and push it to remote."

main() {
  __gs-check-usage-param $1
  main-exec "$@"
}

main-exec() {
  git push $GS_DEFAULT_REMOTE $GS_DEFAULT_REMOTE:refs/heads/$1 && \
  git fetch $GS_DEFAULT_REMOTE && \
  git branch --track $1 $GS_DEFAULT_REMOTE/$1 && \
  cd . && \
  git checkout $1
}

main "$@"
