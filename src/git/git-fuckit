#!/bin/bash
source $GS_INIT_PATH
__git-story-init

USAGE="<commit-msg>

optional:
  commit-msg, default: open default git editor

Commit all files and push current branch."

main() {
  __gs-check-usage-param $1
  main-exec "$@"
}

main-exec() {
  if [[ $(__gs-is-clean-dir) == "dirty" ]]; then
    git addcom "$1"
  fi
  git push $GS_DEFAULT_REMOTE $(__gs-current-branch)
}

main "$@"
