#!/bin/bash
source $GS_INIT_PATH
__git-story-init

usage() {
  __gs-print "usage:
\t git tag-release
lists all releases and prompts for a version number to tag the current branch with."
}

main() {
  __gs-check-usage-param $1
  main-exec "$@"
}

main-exec() {
  git fetch --tags
  __gs-print "Previous releases:"
  __gs-print "========================"
  git tag
  __gs-print "========================"

  __gs-print "Parent tag and current commit:"
  __gs-info "$(git describe)"
  version_no="$(__gs-prompt-for-result "$GS_NEW_TAG_PROMPT")"
  if [[ "$version_no" == *" "* ]]; then
    __gs-error "ERROR:"
    __gs-print "\t Tag can *not* contain spaces!"
    die
  fi

  git tag -a $version_no -m "Version $version_no" && \
  git push --tags && \
  __gs-success "Success." && __gs-print "Tagged version: $version_no" || \
  __gs-error "Something went wrong creating the tag."
}

main "$@"
